@using Microsoft.AspNetCore.Http
@using System.Text.Json
@inject IHttpContextAccessor HttpContextAccessor
@{
    bool isLogin = HttpContextAccessor.HttpContext?.Session.GetString("isLogin") == "true" ? true : false;
    
    string userJson = HttpContextAccessor.HttpContext?.Session.GetString("userJson");
    Users user = userJson != null ? JsonSerializer.Deserialize<Users>(userJson) : null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ECommerceWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (isLogin == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Logout">登出</a>
                            </li>
                        }
                        @if (isLogin == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">商品查詢</a>
                            </li>
                        }
                        @if (isLogin == true && user != null && (user.Role == "Store" || user.Role == "Admin" || user.Role == "System"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="" asp-action="">商品上架管理</a>
                            </li>
                        }
                        @if (isLogin == true && user != null && (user.Role == "Admin" || user.Role == "System"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="" asp-action="">系統帳號管理</a>
                            </li>
                        }

                    </ul>
                </div>
                @if (isLogin == true && user != null)
                {
                    <span>名稱：@user.UserName</span>
                    <text>&nbsp;&nbsp;&nbsp;&nbsp;</text>
                    <span>角色：@user.Role</span>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ECommerceWeb@* - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
