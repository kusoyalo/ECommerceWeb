@model IEnumerable<ECommerceWeb.Models.Products>

@{
    ViewData["Title"] = "Menu";
}

<span style="color:red">這裡只列出以商品代碼排序最大的前10筆</span>
<table class="table">
    <thead>
        <tr>
            <th>商品代碼</th>
            <th>品名</th>
            <th>類別</th>
            <th>商品狀態</th>
            <th>最後修改時間</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductCategory)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.LastModifiedTime)</td>
            </tr>
        }
    </tbody>
</table>